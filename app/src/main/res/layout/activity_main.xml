<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.github.bkhezry.searchablespinner.SearchableSpinner
        android:id="@+id/searchable_spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        app:boarder_color="@android:color/holo_blue_light"
        app:borders_size="1dp"
        app:reveal_view_background_color="#c3c3c3"
        app:search_view_background_color="#c3c3c3"
        app:done_search_tint_color="#c3c3c3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       app:show_borders="true"
        app:anim_duration="0"
        app:items_divider="@color/black"
        app:divider_height="1px"
        app:search_hint_text="Search"
        app:start_search_tint_color="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>